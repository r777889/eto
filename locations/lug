			gs'boyfrend','start'
			stopboy = 0
			'<<$boyA>> record your phone and left.'
			act 'Complete outing':gt'lug'
		end
	end
end


if pavserhom = 0 and psiha = 0 and housr = 0:
    temp = RAND(1,100)
    if temp >= 90:
