# FightCrouch
!rMin -= 1
gs'fightStat'
stoper = 0

'<center><img src="images/pic/fight/cro.jpg"></center>'

if crouch = 1:
	enrand = RAND(0,1)
	if enrand = 0:$text = '<<$nameE>> prizhimetsya to the floor'
	if enrand = 1:$text = '<<$nameE>> He is trying to roll over on his back'
	if enrand = 2:$text = '<<$nameE>> He tries to counter roll'

	'<<$nameE>> It is on all fours in front of you.'

	act 'Make a roll':
		cls
		endur -= 2

		'You are attempting to throw. <<$text>>'

		if enrand = 0:
			pointE += 1

			'<center><img src="images/pic/fight/cron.jpg"></center>'
			'Opponent managed to cling to the floor and you can not perform a roll.'

			act '...':gt'fightfw'
		elseif enrand = 1:
			point += 2
			endurE -= 1

			'<center><img src="images/pic/fight/crob.jpg"></center>'
			'You have intercepted an attempt to rival roll over and completed the throw.'

			act '...':gt'fight1'
		end
	end
	act 'Make an attempt to hold':
		cls
		endur -= 1

		'You are attempting to hold. <<$text>>'

		if enrand = 0:
			point += 1

			'<center><img src="images/pic/fight/crou.jpg"></center>'
			'Opponent is pressed to the floor, and you easily manage to fix it.'

			act '...':gt'fight2'
		elseif enrand = 1:
			pointE += 1
			endurE -= 1

			'<center><img src="images/pic/fight/cronu.jpg"></center>'
			'Opponent flipped onto his back did not hold you to spend dvavaya.'

			act '...':gt'fight3'
		elseif enrand = 2:
			''
		end
	end
else
	enrand = RAND(0,1)
	if enrand = 0:$text = '<<$nameE>> He tries to throw'
	if enrand = 1:$text = '<<$nameE>> He is trying to make an attempt to hold'

	'You are standing on all fours in front of rival.'

	act 'Pull over to the floor':
		cls
		'You are pressed to the floor. <<$text>>'

		if enrand = 0:
			point += 1
			endurE -= 2

			'<center><img src="images/pic/fight/cron.jpg"></center>'
			'Opponent does not have time to execute a throw.'

			act '...':gt'fightE'
		elseif enrand = 1:
			pointE += 1
			endurE -= 1

			'<center><img src="images/pic/fight/crou.jpg"></center>'
			'Opponent successfully a hold.'

			act '...':gt'fightE1'
		end
	end
	act 'Roll over on his back':
		cls
		endur -= 1

		'You are trying to roll over on his back. <<$text>>'

		if enrand = 0:
			pointE += 2
			endurE -= 2

			'<center><img src="images/pic/fight/crob.jpg"></center>'
			'Opponent easily captures and holds you throw.'

			act '...':gt'fightE2'
		elseif enrand = 1:
			point += 1
			endurE -= 1

			'<center><img src="images/pic/fight/cronu.jpg"></center>'
			'You are pulled from the capture of the opponent and turn on the back.'

			act '...':gt'fightE3'
		end
	end
end
