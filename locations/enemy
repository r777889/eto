	!program directly attacks
	if tuman = 0 and tumanV < 5 and mannaV > 10:
		mannaV = mannaV - 10
		tumanV = tumanV + 10

		'<b><font color = red><<$nameV>> produces a fog on the battlefield.</font></b>'

		xgt'fight','sta'
		exit
	end

	deystrand = RAND(0,1)
	if deystrand = 0:
		xgt'atak','enemy'
	elseif deystrand = 1:
		knifeV = RAND(1,3)

		'<b><font color = red><<$nameV>> throws in you <<knifeV>> knives</font></b>'

		xgt'atak','enemy'
	end
end

