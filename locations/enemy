	cla
	!program directly attacks
	!gs'atak'
	xgt'atak','enemy'
end

if $ARGS[0] = 'fighter2':
	cla
	!program directly attacks
	deystrand = RAND(0,1)
	if deystrand = 0:
		xgt'atak','enemy'
	elseif deystrand = 1:
		knifeV = RAND(1,3)

		'<b><font color = red><<$nameV>> throws in you <<knifeV>> knives</font></b>'

		xgt'atak','enemy'
	end
end

